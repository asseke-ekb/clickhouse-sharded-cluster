# ==================== Admin Credentials ====================
CLICKHOUSE_ADMIN_PASSWORD=Astana2025!@Admin

# ==================== Network Settings ====================
# Shard-1 Ports
SHARD1_HTTP_PORT=8123
SHARD1_TCP_PORT=9000
SHARD1_INTERSERVER_PORT=9009
SHARD1_METRICS_PORT=9363

# Shard-2 Ports
SHARD2_HTTP_PORT=8124
SHARD2_TCP_PORT=9001
SHARD2_INTERSERVER_PORT=9010
